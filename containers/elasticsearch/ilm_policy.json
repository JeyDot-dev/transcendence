{
    "policy": {
        "phases": {
            "hot": {
                "actions": {
                    "rollover": {
                        "max_primary_shard_size": "1gb",
                        "max_primary_shard_docs": 1000,
                        "max_age": "1m"
                    }
                }
            },
            "warm": {
                "min_age": "1m",
                "actions": {
                    "set_priority": {
                        "priority": 50
                    },
                    "forcemerge": {
                        "max_num_segments": 1
                    }
                }
            },
            "cold": {
                "min_age": "3m",
                "actions": {
                    "set_priority": {
                        "priority": 0
                    },
                    "freeze": {}
                }
            },
            "delete": {
                "min_age": "5m",
                "actions": {
                    "delete": {}
                }
            }
        }
    }
}
